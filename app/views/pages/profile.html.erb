<style>
	#profile-pic {
		margin-top: -80px;
	}
</style>


<div class="container-fluid">
	<div class="jumbotron" style="background-color: rgba(0,0,0,0.7);">
	<img src="/user.png" width="100px" height="100px"> <br>
	<%= @username %>
	</div>
</div>

<div class="container">
	<div class="col-xs-3" id="profile-pic">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>profile</p>
			</div>
			<div class="panel-body">
				<p>profile info goes here</p>
			</div>
		</div>
	</div>

	<div class="col-xs-6">
		<!-- <div class="panel panel-default">
			<div class="panel-heading">Compose message</div> -->
			<div class="panel-body"></div>
		<!-- </div> -->
		<div class="panel panel-default" id="post-media">
				<div class="panel-body" id="post-divide">
				<%= render '/components/post_form' %> <hr>
				<% for @p in @posts %>
					<div class="media">
						<div class="media-left">
							<img src="/user.png" class="img-rounded" width="64px" height="64px">
						</div>
						<div class="media-body">
							<div class="media-heading">
								<h4><%= User.find(@p.user_id).username %> -<span class="post-time"> Created <%= time_ago_in_words(@p.created_at) %> ago</span> </h4>
							</div>
							<p><%= @p.content %></p>
							<div class="col-xs-12" id="gicons">
								<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
								<span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
								<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
								<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
							</div>
						</div> 
					</div> <hr>
				<%end%>
				</div>			
		</div>
	</div>
	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>who to follow</p>
			</div>
			<div class="panel-body">
				<p>other link info goes here</p>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>about</p>
			</div>
			<div class="panel-body">
				<p>other link info goes here</p>
			</div>
		</div>
	</div>
<!-- 2nd row begins -->
</div>