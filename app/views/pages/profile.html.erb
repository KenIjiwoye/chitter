<div class="container-fluid">
	<div class="jumbotron"><%= @username %></div>
</div>

<div class="container">
	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>profile</p>
			</div>
			<div class="panel-body">
				<p>profile info goes here</p>
			</div>
		</div>
	</div>

	<div class="col-xs-6">
		<!-- <div class="panel panel-default">
			<div class="panel-heading">Compose message</div> -->
			<div class="panel-body"><%= render '/components/post_form' %></div>
		<!-- </div> -->
		<div class="panel panel-default" id="post-media">
				<div class="panel-body" id="post-divide">
				<% for @p in @posts %>
					<div class="media">
						<div class="media-left">
							<img src="/user.png" class="img-rounded" width="64px" height="64px">
						</div>
						<div class="media-body">
							<div class="media-heading">
								<h4><%= User.find(@p.user_id).username %> -<span class="post-time"> Created <%= time_ago_in_words(@p.created_at) %> ago</span> </h4>
							</div>
							<p><%= @p.content %></p>
						</div> 
					</div> <hr>
				<%end%>
				</div>			
		</div>
	</div>
	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>who to follow</p>
			</div>
			<div class="panel-body">
				<p>other link info goes here</p>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<p>about</p>
			</div>
			<div class="panel-body">
				<p>other link info goes here</p>
			</div>
		</div>
	</div>
<!-- 2nd row begins -->
</div>